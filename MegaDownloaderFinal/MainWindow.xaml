<Window
    x:Class="MegaDownloaderFinal.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MegaDownloaderFinal.Views" xmlns:viewmodels="clr-namespace:MegaDownloaderFinal.ViewModels"
    Title="Collection View Filtering"
    Width="1000"
    Height="1000"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center"  Width="900" >
        <Grid MaxWidth="1000" Margin="25 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                FontSize="28"
                Text="EAB WHDLoad Stash" />

            <views:NodesView Grid.Row="1" Margin="0 5 0 0"
                DataContext="{Binding NodeListingViewModel}"
                FontSize="14" Height="600" 
                />

        </Grid>

       
        <views:StorageView Grid.Row="1" Margin="0 5 0 0"
                    DataContext="{Binding StorageModel}"
                FontSize="14" 
                />




    </StackPanel>
</Window>